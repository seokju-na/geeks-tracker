{
  "build": {
    "devPath": "http://localhost:1420",
    "distDir": "../web/dist"
  },
  "package": {
    "productName": "geeks-tracker",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "startDragging": true
      },
      "os": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "main",
        "title": "Geek's Tracker",
        "width": 640,
        "height": 420,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": true,
        "focus": true,
        "skipTaskbar": true,
        "visible": false,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ai.geeks.tracker",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    }
  }
}
